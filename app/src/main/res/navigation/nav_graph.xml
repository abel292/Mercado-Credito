<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.abel.mercadoaea.views.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_resultListFragment"
            app:destination="@id/resultListFragment"
            />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:popUpToInclusive="true"
            app:launchSingleTop="true"/>
    </fragment>

    <fragment
        android:id="@+id/resultListFragment"
        android:name="com.abel.mercadoaea.views.resultList.ResultListFragment"
        android:label="fragment_result_list"
        tools:layout="@layout/fragment_result_list" >
        <argument
            android:name="argQuery"
            app:argType="string" />
        <action
            android:id="@+id/action_resultListFragment_to_viewerItemActivity"
            app:destination="@id/viewerItemActivity" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.abel.mercadoaea.views.suggest.SuggestFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_suggest">
        <action
            android:id="@+id/action_searchFragment_to_resultListFragment"
            app:destination="@id/resultListFragment"
            app:popUpToInclusive="false"
            app:launchSingleTop="true"
            app:popUpTo="@id/homeFragment"
            />
    </fragment>
    <activity
        android:id="@+id/viewerItemActivity"
        android:name="com.abel.mercadoaea.views.viewerItem.ViewerItemActivity"
        android:label="activity_viewer_item"
        tools:layout="@layout/activity_viewer_item" >
        <argument android:name="argIdProduct" />
    </activity>

</navigation>